{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "dependencies",
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": true,
      "automerge": true
    },
    {
      "matchPackageNames": [
        "typescript"
      ],
      "matchUpdateTypes": [
        "patch"
      ],
      "enabled": true,
      "automerge": true
    }
  ],
  "dependencyDashboard": true
}
