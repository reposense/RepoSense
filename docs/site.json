{
  "baseUrl": "",
  "titlePrefix": "RepoSense",
  "style": {
    "codeTheme": "light"
  },
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.mbd",
    "*.mbdf",
    "*.njk",
    ".git/*",
    "diagrams/*",
    "CNAME"
  ],
  "pages": [
    {
      "glob": ["**/*.+(md|mbd)"]
    },
    {
      "glob": ["dg/*.+(md|mbd)"],
      "frontmatter": {
        "layout": "dg-layout.md"
      }
    },
    {
      "glob": ["ug/*.+(md|mbd)"],
      "frontmatter": {
        "layout": "ug-layout.md"
      }
    }
  ],
  "pagesExclude": ["node_modules/*"],
  "deploy": {
    "message": "Site Update."
  },
  "plugins": ["filterTags"],
  "pluginsContext": {
    "filterTags" : {
      "tags": ["-production", "dev"]
    }
  }
}
